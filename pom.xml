									<!--<configLocation>gol-checkstyle.xml</configLocation> -->
									<!--</configuration> -->
								</plugin>
								<plugin>
									<groupId>org.apache.maven.plugins</groupId>
									<artifactId>maven-pmd-plugin</artifactId>
									<version>2.5</version>
									<configuration>
										<targetJdk>${targetJdk}</targetJdk>
										<aggregate>true</aggregate>
										<format>xml</format>
										<rulesets>
