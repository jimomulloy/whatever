	</properties>

	<!-- Note this requires SSH set up for GIT repo also set up UBUNTU Jenkins 
		user with SSH key and register with GITHUB -->
	<scm>
		<connection>scm:git:git@github.com:jimomulloy/mvndemo.parent.git</connection>
		<developerConnection>scm:git:git@github.com:jimomulloy/mvndemo.parent.git</developerConnection>
		<url>https://github.com/jimomulloy/mvndemo.parent</url>
		<tag>HEAD</tag>
	</scm>

